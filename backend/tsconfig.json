{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",  // ⬅️ Change to CommonJS (Vercel prefers it for Node.js APIs)
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["node"]  // ⬅️ Ensure Node.js types are included
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
